<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_black"
    tools:context=".SelectLevelsActivity">

    <Button
        style="@style/SelectLevelButton"
        android:id="@+id/forKidsLevelButton"
        android:layout_width="280dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:onClick="onClickSelectForKidsLevel"
        android:text="@string/for_kids_level"
        app:layout_constraintBottom_toTopOf="@+id/MediumLevelButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.165" />

    <Button
        style="@style/SelectLevelButton"
        android:id="@+id/veryEasyLevelButton"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:onClick="onClickSelectVeryEasyLevel"
        android:text="@string/very_easy_level"
        app:layout_constraintBottom_toTopOf="@+id/MediumLevelButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.226"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/forKidsLevelButton" />

    <Button
        style="@style/SelectLevelButton"
        android:id="@+id/EasyLevelButton"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:onClick="onClickSelectEasyLevel"
        android:text="@string/easy_level"
        app:layout_constraintBottom_toTopOf="@+id/MediumLevelButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.773"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/forKidsLevelButton" />

    <Button
        style="@style/SelectLevelButton"
        android:id="@+id/MediumLevelButton"
        android:layout_width="280dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:onClick="onClickSelectMediumLevel"
        android:text="@string/medium_level"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499" />

    <Button
        style="@style/SelectLevelButton"
        android:id="@+id/HardLevelButton"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:onClick="onClickSelectHardLevel"
        android:text="@string/hard_level"
        app:layout_constraintBottom_toTopOf="@+id/Impossible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.226"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MediumLevelButton"
        app:layout_constraintVertical_bias="0.515" />

    <Button
        style="@style/SelectLevelButton"
        android:id="@+id/VeryHardLevelButton"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:onClick="onClickSelectVeryHardLevel"
        android:text="@string/very_hard_level"
        app:layout_constraintBottom_toTopOf="@+id/Impossible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.773"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MediumLevelButton"
        app:layout_constraintVertical_bias="0.515" />

    <Button
        style="@style/SelectLevelButton"
        android:id="@+id/Impossible"
        android:layout_width="280dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:onClick="onClickSelectImpossible"
        android:text="@string/impossible_level"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MediumLevelButton"
        app:layout_constraintVertical_bias="0.813" />


</androidx.constraintlayout.widget.ConstraintLayout>